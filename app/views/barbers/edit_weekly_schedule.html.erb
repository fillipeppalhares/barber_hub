<%= simple_form_for(@barber, url: update_weekly_schedule_barber_path(@barber), method: :patch) do |f| %>
  <div class="row g-3">
    <% @weekly_schedule.each do |weekday, schedules| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100">
          <div class="card-header fw-bold"><%= Weekdays.key_for weekday %></div>

          <div class="card-body">
            <% schedules.each do |schedule| %>
              <%= f.simple_fields_for(:schedules, schedule, child_index: schedule.id) do |ff| %>
                <%= ff.hidden_field :id %>
                <%= ff.input :start_time %>
                <%= ff.input :end_time %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
