<%= simple_form_for(request, url: appointments_path, method: :post) do |f| %>
  <%= f.hidden_field :barber_id %>
  <%= f.hidden_field :service_id %>
  <%= f.hidden_field :customer_name %>
  <%= f.hidden_field :start_at %>
  <%= f.hidden_field :end_at %>

  <%= f.button :submit, "Make appointment", class: "btn btn-success" %>
<% end %>
